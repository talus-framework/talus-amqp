#!/bin/bash

if [ ! -e "/usr/bin/docker" ]; then
        echo "[+] installing docker"
        wget -qO- https://get.docker.com/ | sh
        sudo usermod -aG docker $(whoami)
        echo "[+] done installing docker"
fi

if docker images | grep -q 'talus-amqp'; then
	echo "[+] talus-amqp docker rabbitmq amqp container already installed"
	echo "If you want to rebuild this container, perform docker rmi talus-amqp"
else
	echo "[+] installing talus-amqp docker rabbitmq amqp container"
	docker pull talus/talus-amqp
fi

sudo mkdir -p /talus/data /var/log/talus/rabbitmq

DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )

$DIR/build

if [[ `systemctl` =~ -\.mount ]]; then

echo "Installing talus-amqp as systemd service"
cat << EOF | sudo tee /etc/systemd/system/docker.talus-amqp.service > /dev/null
[Unit]
Description=Talus AMQP
Requires=docker.service
After=docker.service

[Service]
Restart=always
ExecStart=$(readlink -f $DIR)/start

ExecStop=$(readlink -f $DIR)/stop

[Install]
WantedBy=default.target
EOF
sudo chmod 664 /etc/systemd/system/docker.talus-amqp.service
sudo systemctl daemon-reload
sudo systemctl start docker.talus-amqp
sudo systemctl enable docker.talus-amqp

else

cat << EOF | sudo tee /etc/init/talus-amqp.conf > /dev/null
description "Talus AMQP"
author		"Optiv Labs"

start on (starting talus-master)
stop on shutdown
respawn

script
   $(readlink -f $DIR)/start
end script
EOF

sudo start talus-amqp

fi
